@model Signin
<div class="Header">
    <h1>Welcome to the Dojo Activity Center!</h1>
    <a style="margin-left: 94%;"href="/">Register</a>
</div>
<div>
    <span style="color:red;" asp-validation-for="SigninEmail"></span>
    <span style="color:red;" asp-validation-for="SigninPassword"></span>
</div>
<form asp-action="Login" asp-controller="Home" method="post">
    <div class="SigninEmail">
    <label asp-for="SigninEmail"></label>
    <input asp-for="SigninEmail" class="form-control" placeholder="Email">
    </div>

    <div class="SigninPassword">
    <label asp-for="SigninPassword"></label>
    <input asp-for="SigninPassword" class="form-control" placeholder="Password">
    </div> <br>
    <input type="submit" class="btn btn-primary" value="Login">
</form>
